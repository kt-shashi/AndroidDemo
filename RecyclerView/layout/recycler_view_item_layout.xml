<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/recycler_view_shape"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_text_view_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="@string/name"
        android:textColor="#009688"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone_text_view_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="@string/phone"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/name_text_view_item_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_text_view_item_layout"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view_item_layout" />

    <Button
        android:id="@+id/delete_button_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:padding="7dp"
        android:text="@string/delete"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/name_text_view_item_layout"
        app:layout_constraintStart_toStartOf="@+id/name_text_view_item_layout"
        app:layout_constraintTop_toBottomOf="@+id/phone_text_view_item_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>